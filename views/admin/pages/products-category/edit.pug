extends ../../layouts/default.pug
include ../../mixins/select-tree.pug
block main
  h1(class="mb-4") Chỉnh sửa danh mục sản phẩm

  form(
    action=`${prefixAdmin}/products-category/edit/${record._id}?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
        value=record.title
      )
    div(class="form-group")
      label(for="parent_id") Danh mục cha
      select(
        name='parent_id'
        id='parent_id'
        class='form-control'
      )
        option(value='' disabled selected) -- Chọn danh mục cha ---
          if (categoriesTree)
            +select-tree(categoriesTree,1,record.parent_id)
    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        type="text"
        class="form-control"
        id="desc"
        name="description"
        rows="5"
        textarea-mce
      ) #{record.description}
    div(
      class="form-group"
      upload-image
    )
      label(for="thumbnail") Ảnh
      input(
        type="file"
        class="form-control"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      div(
        class = "upload-image-wrapper"
      )
        img(
          class="img-thumbnail image-preview" 
          src=record.thumbnail
          upload-image-preview
        )
        button(
          type="button"
          class="upload-image-clear d-none"
          upload-image-clear
        ) ×
    div(class="form-group")
      label(for="position") Vị trí
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
        value=record.position
      ) 
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked = (record.status === 'active')
      )
      label(for="statusActive" class="form-check-label") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="status"
        value="inactive"
        checked = (record.status === 'inactive')
      )
      label(for="statusInActive" class="form-check-label") Dừng hoạt động
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật
extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    +showAlertSuccess(5000)
    +showAlertError(5000)
    .container.mt-5
        .row.justify-content-center
            .col-md-8.col-lg-6
                .card.shadow
                    .card-body.p-4
                        .d-flex.flex-column.align-items-center
                            if (user.avatar)
                                img(src=user.avatar width="120" height="120" class="mb-3 rounded-circle border border-3 border-primary shadow-sm")
                            else
                                img(src="/admin/images/avatar.png" width="120" height="120" class="mb-3 rounded-circle border border-3 border-primary shadow-sm")
                            h3.mb-1.text-primary #{user.fullName || 'Chưa cập nhật tên'}
                            p.text-muted.mb-3 #{user.email || 'Chưa cập nhật email'}
                        hr
                        .row.mb-2
                            .col-5.fw-semibold.text-end.text-secondary Số điện thoại:
                            .col-7
                                | #{user.phone || 'Chưa cập nhật'}
                        .row.mb-2
                            .col-5.fw-semibold.text-end.text-secondary Trạng thái:
                            .col-7
                                span.badge(
                                    class=(user.status === "active" ? "bg-success" : "bg-danger")
                                ) #{user.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
                        .row.mb-2
                            .col-5.fw-semibold.text-end.text-secondary Phân quyền:
                            .col-7
                                | #{role.title || 'Chưa phân quyền'}
                        .d-flex.justify-content-center.mt-4
                            a(
                                href=`${prefixAdmin}/my-account/edit`
                                class="btn btn-outline-primary px-4"
                            ) Chỉnh sửa thông tin
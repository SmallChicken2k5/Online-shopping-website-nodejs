extends ../../layouts/auth.pug

block main
    .container.my-5
        .row.justify-content-center
            .col-8
                h1.text-center Đăng nhập
                form(
                    action=`${prefixAdmin}/auth/login`
                    method="POST"
                )
                    .mb-3
                        label.form-label(for="email") Email
                        input.form-control(
                            type="email"
                            id="email"
                            name="email"
                            required
                        )
                    .mb-3
                        label.form-label(for="password") Mật khẩu
                        input.form-control(
                            type="password"
                            id="password"
                            name="password"
                            required
                        )
                    button.btn.btn-primary.w-100(type="submit") Đăng nhập

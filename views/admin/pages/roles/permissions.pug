        tr
          td Kiểm duyệt đơn hàng
          each item in records
            td(class="text-center")
              input(
                type="checkbox" 
                data-id=item.id
                data-name="orders_approval"
                checked=(item.permissions.includes("orders_approval") ? true : false)
              )

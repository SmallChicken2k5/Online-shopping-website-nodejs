              )
        tr
          td Xóa
          each item in records
            td(class="text-center")
              input(
                type="checkbox" 
                data-id=item.id
                data-name="accounts_delete"
                checked=(item.permissions.includes("accounts_delete") ? true : false)
              )
        //- Đơn hàng
        tr
          td(colspan="4")
            b Đơn hàng
        tr

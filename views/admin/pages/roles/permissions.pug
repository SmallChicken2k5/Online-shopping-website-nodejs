            b Cài đặt chung
        tr
          td Chỉnh sửa cài đặt
          each item in records
            td(class="text-center")
              input(
                type="checkbox" 
                data-id=item.id
                data-name="general_settings_update"
                checked=(item.permissions.includes("general_settings_update") ? true : false)
              )
    form(
        id='form-change-permissions'
        action=`${prefixAdmin}/roles/permissions?_method=PATCH`
        method='POST'
    )
        div(class = 'form-group')
            input(
                type='hidden' 
                name='permissions'
                class='form-control'
            )
    script(src="/admin/js/roles.js") 
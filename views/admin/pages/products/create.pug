extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main
  +showAlertError(5000)
  +showAlertSuccess(5000)
  h1.mb-4 Thêm mới sản phẩm

  form(
    action=`${prefixAdmin}/products/create`
    id="form-create-product"
    method="POST"
    enctype="multipart/form-data"
  )
    div.mb-3
      label.form-label(for="title") Tiêu đề
      input.form-control(
        type="text"
        id="title"
        name="title"
        required
      )
    div.mb-3
      label.form-label(for="product_category_id") Danh mục
      select.form-select(
        name='product_category_id'
        id='product_category_id'
      )
        option(value='' disabled selected) -- Chọn danh mục ---
          if (categoriesTree)
            +select-tree(categoriesTree)
    div.form-check.form-check-inline
      input.form-check-input(
        type='radio'
        id='featured1'
        name='featured'
        value='1'
      )
      label.form-check-label(for='featured1') Nổi bật
    div.form-check.form-check-inline
      input.form-check-input(
        type='radio'
        id='featured0'
        name='featured'
        value='0'
        checked
      )
      label.form-check-label(for='featured0') Không nổi bật
    div.mb-3
      label.form-label(for="desc") Mô tả
      textarea.form-control(
        id="desc"
        name="description"
        rows="5"
        textarea-mce
      )
    div.mb-3
      label.form-label(for="price") Giá
      input.form-control(
        type="number"
        id="price"
        name="price"
        value="0"
        min="0"
      )
    div.mb-3
      label.form-label(for="discount") % Giảm giá
      input.form-control(
        type="number"
        id="discount"
        name="discountPercentage"
        value="0"
        min="0"
      )
    div.mb-3
      label.form-label(for="stock") Số lượng
      input.form-control(
        type="number"
        id="stock"
        name="stock"
        value="0"
        min="0"
      )
    div.mb-3(upload-image)
      label.form-label(for="thumbnail") Ảnh
      input.form-control(
        type="file"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      div.upload-image-wrapper
        img.img-thumbnail.image-preview(
          src=""
          upload-image-preview
        )
        button.btn.btn-outline-secondary.btn-sm.upload-image-clear.d-none(
          type="button"
          upload-image-clear
        ) ×
    div.mb-3
      label.form-label(for="position") Vị trí
      input.form-control(
        type="number"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
      )
    div.form-check.form-check-inline
      input.form-check-input(
        type="radio"
        id="statusActive"
        name="status"
        value="active"
        checked
      )
      label.form-check-label(for="statusActive") Hoạt động
    div.form-check.form-check-inline
      input.form-check-input(
        type="radio"
        id="statusInActive"
        name="status"
        value="inactive"
      )
      label.form-check-label(for="statusInActive") Dừng hoạt động
    div.mb-3
      button.btn.btn-primary(type="submit") Tạo mới

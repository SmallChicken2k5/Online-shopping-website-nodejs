extends ../../layouts/default.pug

block main
  h1 Danh sách sản phẩm
  table.table.table-hover.table-sm
    thead
      tr
        th STT
        th Hình ảnh
        th Tiêu đề
        th Giá
        th Trạng thái
        th Hành động
    tbody
        tr
            td 1
            td
                img(
                    src="https://cdn.dummyjson.com/product-images/beauty/essence-mascara-lash-princess/thumbnail.webp",
                    alt="Sản phẩm 1",
                    width="100px",
                    height="auto"
                )

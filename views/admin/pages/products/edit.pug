extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main
  +showAlertSuccess(5000)
  +showAlertError(5000)
  h1(class="mb-4") Sửa sản phẩm
  form(
    action=`${prefixAdmin}/products/edit/${product._id}?_method=PATCH`
    id="form-edit-product"
    method="POST" 
    enctype="multipart/form-data"
  )
    div(class="mb-3")
      label(for="title" class="form-label") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        value=product.title
        required
      )
    div(class="mb-3")
      label(for="product_category_id" class="form-label") Danh mục
      select(
        name='product_category_id'
        id='product_category_id'
        class='form-select'
      )
        option(value='' disabled selected) -- Chọn danh mục ---
          if (categoriesTree)
            +select-tree(categoriesTree,1,product.product_category_id)
    div(class="form-check form-check-inline mb-3")
      input.form-check-input(
        type='radio'
        id='featured1'
        name='featured'
        value='1'
        checked = (product.featured === '1' ? true : false)
      )
      label.form-check-label(for='featured1') Nổi bật
    div(class="form-check form-check-inline mb-3")
      input.form-check-input(
        type='radio'
        id='featured0'
        name='featured'
        value='0'
        checked = (product.featured === '1' ? false : true)
      )
      label.form-check-label(for='featured0') Không nổi bật
    div(class="mb-3")
      label(for="desc" class="form-label") Mô tả
      textarea(
        class="form-control"
        id="desc"
        name="description"
        rows="5"
        textarea-mce
      ) !{product.description}
    div(class="mb-3")
      label(for="price" class="form-label") Giá
      input(
        type="number"
        class="form-control"
        id="price"
        name="price"
        value=product.price
        min="0"
        step="0.01"
      )
    div(class="mb-3")
      label(for="discount" class="form-label") % Giảm giá
      input(
        type="number"
        class="form-control"
        id="discount"
        name="discountPercentage"
        value=product.discountPercentage
        min="0"
        step="0.01"
      )
    div(class="mb-3")
      label(for="stock" class="form-label") Số lượng
      input(
        type="number"
        class="form-control"
        id="stock"
        name="stock"
        value=product.stock
        min="0"
      )
    div(
      class="mb-3"
      upload-image
    )
      label(for="thumbnail" class="form-label") Ảnh
      input(
        type="file"
        class="form-control"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      div(
        class = "upload-image-wrapper"
      )
        img(
          class="img-thumbnail image-preview" 
          src=product.thumbnail
          upload-image-preview
        )
        button(
          type="button"
          class="btn btn-outline-secondary upload-image-clear d-none"
          upload-image-clear
        ) ×
    div(class="mb-3")
      label(for="position" class="form-label") Vị trí
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
        value = product.position
      )
    div(class="form-check form-check-inline mb-3")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked = (product.status === 'active' ? true : false)
      )
      label(for="statusActive" class="form-check-label") Hoạt động
    div(class="form-check form-check-inline mb-3")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="status"
        value="inactive"
        checked = (product.status === 'inactive' ? true : false)
      )
      label(for="statusInActive" class="form-check-label") Dừng hoạt động
    div(class="mb-3")
      button(
        type="submit"
        class="btn btn-primary"
      ) Chinh Sửa
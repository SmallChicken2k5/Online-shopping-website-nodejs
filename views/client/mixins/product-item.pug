mixin product-item(product)
    .col-md-4.mb-4
        .card.h-100.shadow-sm
            .d-flex.justify-content-center.align-items-center.position-relative(style="height:220px; background:#f8f9fa;")
                if (product.featured === '1')
                    span.badge.bg-success.position-absolute(style="top:10px; right:10px; z-index:2;") Nổi bật
                img.card-img-top(
                    src=product.thumbnail, 
                    alt=product.title, 
                    style="max-height:200px; max-width:100%; object-fit:contain;"
                )
            .card-body
                h5.card-title.text-primary.mb-2
                    a(
                        href='/products/' + product.slug , 
                        class="text-decoration-none text-primary"
                    ) #{product.title}
                .product-desc.mb-2
                    span.fw-semibold Giá: 
                    if product.discountPercentage
                        span.text-muted.text-decoration-line-through.me-2= product.price + '$'
                        span.text-danger= product.discountedPrice + '$'
                    else
                        span.text-danger= product.price + '$'
                    br
                    span.fw-semibold Kho: 
                    span.text-secondary= product.stock
                p.text-muted.mb-0 !{product.description}
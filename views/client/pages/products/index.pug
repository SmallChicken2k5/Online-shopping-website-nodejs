extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main 
    .container.mt-5
        +box-head('Danh sách sản phẩm test', 'Dưới đây là các sản phẩm hiện có trong cửa hàng của chúng tôi.')

        .row
            each product in products
                .col-md-4.mb-4
                    .card.h-100.shadow-sm
                        .d-flex.justify-content-center.align-items-center(style="height:220px; background:#f8f9fa;")
                            img.card-img-top(
                                src=product.thumbnail, 
                                alt=product.title, 
                                style="max-height:200px; max-width:100%; object-fit:contain;"
                            )
                        .card-body
                            h5.card-title.text-primary.mb-2= product.title
                            .product-desc.mb-2
                                span.fw-semibold Giá: 
                                if product.discountPercentage
                                    span.text-muted.text-decoration-line-through.me-2= product.price + '$'
                                    span.text-danger= product.discountedPrice + '$'
                                else
                                    span.text-danger= product.price + '$'
                                br
                                span.fw-semibold Kho: 
                                span.text-secondary= product.stock
                            p.text-muted.mb-0= product.description




extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
block main
    +showAlertSuccess(5000)
    +showAlertError(5000)
    .container.my-3
        .row
            .col-8.mx-auto
                +box-head-center(title)

                form(
                    action="/user/password/reset"
                    method="POST"
                )
                    .mb-3
                        label(for="password" class="form-label") Mật khẩu mới
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                        )
                    .mb-3
                        label(for="confirmPassword" class="form-label") Xác nhận mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                            required
                        )
                    .mb-3
                        button(
                            type="submit"
                            class="btn btn-primary w-100"
                        ) Đổi mật khẩu